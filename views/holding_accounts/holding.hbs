
{{#> admin}}
    {{#* inline "content"}}

    <!--begin::Main-->
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-6 pb-2">
                <!--begin::Toolbar container-->
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <!--begin::Toolbar wrapper-->
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <!--begin::Page title-->
                        <div class="page-title align-items-center d-flex justify-content-center gap-1 me-3">
                            <!--begin::Title-->
                            <h1 class="page-heading d-flex justify-content-center text-gray-900 fw-bold fs-3 m-0">Holding accounts</h1>
                            <!--end::Title-->
                            <a href="/admin/getHoldingAccounts" class="btn btn-sm btn-icon btn-light btn-active-light-primary" data-bs-toggle="tooltip" data-bs-dismiss="click" data-bs-placement="top" title="Reload">
                                <i class="ki-outline ki-arrows-circle fs-2"></i>
                            </a>
                        </div>
                        <!--begin::Actions-->
                        <div class="d-flex align-items-center gap-2 gap-lg-3">
                            <a href="#" class="text-primary btn btn-warning h-40px fs-5 fw-bold hover-scale" data-bs-toggle="modal" data-bs-target="#kt_modal_create_campaign"><i class="ki-outline ki-send text-primary fs-1"></i>Send payment</a>
                        </div>
                        <!--end::Actions-->
                    </div>
                
                    <!--end::Page title-->
                </div>
                    <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar-->

            <div id="kt_app_content" class="app-content flex-column-fluid" >
                <!--begin::Content container-->
                <div id="kt_app_content_container" class="app-container container-fluid" >

                    <!--begin::FLAGS-->
                    <div class="row gx-6 gx-xl-9">
                        <!--begin::Clients-->
                        <div class="col-lg-6 col-xxl-4">
                            <div class="card">
                                <div class="card-body p-9">
                                    <!--begin::Heading-->
                                    <div class="symbol symbol-35px symbol-circle h-50">
                                        <img src="/assets/media/flags/USD.svg" alt="">
                                    </div>
                                    <!--end::Heading-->
                                    <!--begin::Actions-->
                                    <div class=" fs-6 fw-semibold align-items-center">
                                        <div class="d-flex align-items-center">
                                            <span class="svg-icon fs-2x text-success me-2">
                                            </span>
                                            <div class="text-dark fs-1 fw-bold" data-kt-countup="true" data-kt-countup-duration="2" data-kt-countup-decimal-places="2" data-kt-countup-value="{{flags.balanceUSD.balance}}" >0</div>
                                        </div>
                                        <div class="text-gray-500">{{flags.balanceUSD.name}}</div>
                                    </div>
                                </div>
                                <!--end::Actions-->
                            </div>
                        </div>
                        <!--end::Clients-->
                        <!--begin::Clients-->
                        <div class="col-lg-6 col-xxl-4">
                            <div class="card">
                                <div class="card-body p-9">
                                    <!--begin::Heading-->
                                    <div class="symbol symbol-35px symbol-circle h-50">
                                        <img src="/assets/media/flags/MXN.svg" alt="">
                                    </div>
                                    <!--end::Heading-->
                                    <!--begin::Actions-->
                                    <div class=" fs-6 fw-semibold align-items-center">
                                        <!--begin::Number-->
                                        <div class="d-flex align-items-center">
                                            <span class="svg-icon fs-2x text-success me-2">
                                            </span>
                                            <div class="text-dark fs-1 fw-bold" data-kt-countup="true" data-kt-countup-duration="2" data-kt-countup-decimal-places="2" data-kt-countup-value="{{flags.balanceMXN.balance}}" >0</div>
                                        </div>
                                        <!--end::Number-->
                                        <div class="text-gray-500">{{flags.balanceMXN.name}}</div>
                                    </div>
                                </div>
                                <!--end::Actions-->
                            </div>
                        </div>
                        <!--end::Clients-->
                        <!--begin::Clients-->
                        <div class="col-lg-6 col-xxl-4">
                            <div class="card">
                                <div class="card-body p-9">
                                    <!--begin::Heading-->
                                    <div class="symbol symbol-35px symbol-circle h-50">
                                        <img src="/assets/media/flags/CAD.svg" alt="">
                                    </div>
                                    <!--end::Heading-->
                                    <!--begin::Actions-->
                                    <div class=" fs-6 fw-semibold align-items-center">
                                        <!--begin::Number-->
                                        <div class="d-flex align-items-center">
                                            <span class="svg-icon fs-2x text-success me-2">
                                            </span>
                                            <div class="text-dark fs-1 fw-bold" data-kt-countup="true" data-kt-countup-duration="2" data-kt-countup-decimal-places="2" data-kt-countup-value="{{flags.balanceCAD.balance}}" >0</div>
                                        </div>
                                        <!--end::Number-->
                                        <div class="text-gray-500">{{flags.balanceCAD.name}}</div>
                                    </div>
                                </div>
                                <!--end::Actions-->
                            </div>
                        </div>
                        <!--end::Clients-->
                    </div>
                    <!--end::FLAGS-->

                    <div class="d-flex flex-wrap flex-stack my-5"></div>

                    <!--begin::Card-->
                    <div class="">
                        
                        <div class="d-flex flex-stack mb-5">
                            <!--begin::Search-->
                            <div class="d-flex align-items-center position-relative my-1">
                                <select class="form-select form-select-solid w-250px ps-10" id="searchCurrency" data-control="select2" data-hide-search="true" data-placeholder="Search Currency" data-kt-docs-table-filter="search">
                                    <option></option>
                                    <option value="All">All</option>
                                    <option value="USD">USD</option>
                                    <option value="MXN">MXN</option>
                                    <option value="EUR">EUR</option>
                                    <option value="CAD">CAD</option>
                                    <option value="AUD">AUD</option>
                                    <option value="JPY">JPY</option>
                                    <option value="GBP">GBP</option>
                                    <option value="THB">THB</option>
                                    <option value="DKK">DKK</option>
                                </select>
                            </div>
                            <!--end::Search-->

                        </div>
                        <!--end::Wrapper-->
    
                        <!--begin::Datatable-->
                            <table id="kt_datatable_getHolddingAccounts" class="table align-middle table-row-dashed fs-6 gy-5">
                                <thead>
                                <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                    <th>Currency</th>
                                    <th>Current balance</th>
                                    <th>Last 30 days</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody class="text-gray-600 fw-semibold">
                                </tbody>
                            </table>
                            
                        <!--end::Datatable-->
                    </div>
                    <!--end::Card-->
                </div>
                <!--end::Content container-->
            </div>

        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
            <!--end::Content-->
        </div>
        <!--end::Content wrapper-->
        <!--begin::Footer-->
        <div id="kt_app_footer" class="app-footer">
            <!--begin::Footer container-->
            <div class="app-container container-fluid d-flex flex-column flex-md-row flex-center flex-md-stack py-3">
                <!--begin::Copyright-->
                <div class="text-gray-900 order-2 order-md-1">
                    <span class="text-muted fw-semibold me-1">2023&copy;</span>
                    <a href="https://tkambio.com/" target="_blank" class="text-gray-800 text-hover-primary">Tkambio</a>
                </div>
                <!--end::Copyright-->
            </div>
            <!--end::Footer container-->
        </div>
        <!--end::Footer-->
    </div>
    <!--end:::Main-->
{{/inline}}
